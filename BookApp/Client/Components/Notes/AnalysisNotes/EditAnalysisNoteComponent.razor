@inject IAnalysisNoteClientService _analysisNoteClientService

<BookApp.Client.Components.ErrorHandler.ErrorHandlerComponent ChildComponentName="Edit analysis">
    <ChildContent>
        <EditForm Model="@currentAnalysisNote" OnValidSubmit="@EditNote" class="form">
            <DataAnnotationsValidator />
            <ValidationSummary class="validation-summary" />

            <div class="form-group">
                <label for="AnalysisTitle">Note content:</label>
                <InputText @bind-Value="currentAnalysisNote!.Content" class="form-control" />
            </div>

            @if (awaitingResponse)
            {
                <p>Editing note...</p>
            }
            else
            {
                <button type="submit" class="button-action">Submit</button>
            }
        </EditForm>
    </ChildContent>
</BookApp.Client.Components.ErrorHandler.ErrorHandlerComponent>

<button @onclick="Close">Close</button>

@code {
    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;

    [Parameter]
    public AnalysisNoteModel AnalysisNote { get; set; }

    private bool awaitingResponse = false;

    private AnalysisNoteModel currentAnalysisNote { get; set; } = new();

    private async Task Close() => await BlazoredModal.CloseAsync();

    public async Task EditNote()
    {
        awaitingResponse = true;

        await _analysisNoteClientService.EditNote(currentAnalysisNote);

        await Close();
    }

    protected override void OnInitialized()
    {
        currentAnalysisNote = AnalysisNote;
    }
}
