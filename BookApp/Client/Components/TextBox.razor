        if(resposne.IsSuccessStatusCode)
        {
            var tagToAdd = bookAnalysis.Tags.FirstOrDefault(t => t.Id == tagId);
            if(tagToAdd is not null)
            {
                currentHighlight.Tags.Add(tagToAdd);
            }
        }
    }

