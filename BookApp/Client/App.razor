<Blazored.Modal.CascadingBlazoredModal DisableBackgroundCancel="true">
<style>
        .button-action {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .left-arrow-button {
            background-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
        }

            .left-arrow-button::before {
                content: "";
                display: inline-block;
                width: 0;
                height: 0;
                border-top: 8px solid transparent;
                border-bottom: 8px solid transparent;
                border-right: 8px solid white;
                position: absolute;
                left: 8px;
                top: 50%;
                transform: translateY(-50%);
            }

        .right-arrow-button {
            background-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
        }

            .right-arrow-button::before {
                content: "";
                display: inline-block;
                width: 0;
                height: 0;
                border-top: 8px solid transparent;
                border-bottom: 8px solid transparent;
                border-left: 8px solid white;
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
            }

        .book-analysis-listing {
            width: 50%;
            padding: 20px;
            border: 4px solid darkblue;
            background: #bfe2f0;
        }

        .text-box-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 80%;
            background-color: #007bff;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            z-index: 100; /* Ensure it's above other content */
        }

            /* Adjust the styling as needed */
            .text-box-bar ul {
                list-style: none;
                padding: 0;
            }

                .text-box-bar ul li {
                    display: inline;
                    margin: 0 20px;
                }

                    .text-box-bar ul li a {
                        text-decoration: none;
                        color: #fff;
                    }

        .context-Menu {
            z-index: 999;
            display: none;
            position: fixed;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            padding: 5px;
            list-style-type: none;
            top: 100px;
            left: 10px;
            width: 20%; /* 20% width of the entire page width */
            height:20%;
        }

            .context-Menu ul {
                list-style: none;
                padding: 0;
            }

                .context-Menu ul li {
                    display: inline;
                    margin: 0 20px;
                }

                    .context-Menu ul li a {
                        text-decoration: none;
                        color: #fff;
                    }

        .tag-item {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

</style>

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
</Blazored.Modal.CascadingBlazoredModal>  